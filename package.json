{
  "name": "dnslint",
  "version": "1.1.19",
  "description": "XYO Internal Domain Tool",
  "main": "src/index.js",
  "scripts": {
    "pretest": "yarn install",
    "test": "yarn tslint --config tslint.json src/*",
    "build": "tsc",
    "cli": "node dist/cli.js",
    "ajv": "ajv validate -s ./src/schema/dnslint.schema.json -d ./src/config/default.json",
    "develop": "yarn ts-node --files src/cli.ts",
    "publish-npm": "yarn publish . --new-version $npm_package_version"
  },
  "bin": {
    "dnslint": "bin/dnslint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XYOracleNetwork/tool-domains-nodejs.git"
  },
  "author": "Arie Trouw",
  "license": "INTERNAL XY USE ONLY",
  "dependencies": {
    "ajv": "^6.10.0",
    "assert": "^1.4.1",
    "aws-sdk": "^2.408.0",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "deepmerge": "^3.2.0",
    "dotenv-expand": "^5.0.0",
    "load-json-file": "^5.2.0",
    "lodash": "^4.17.11",
    "ts-optchain": "^0.1.3"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.9.4",
    "@xyo-network/config-tslint": "^0.1.7",
    "ts-node": "^8.0.3",
    "tslint": "^5.13.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  }
}
