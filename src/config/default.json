{
  "$schema": "../schema/dnslint.schema.json#",
  "aws": {
    "enabled": true
  },
  "domains": [
    {
      "name": "default",
      "enabled": true,
      "timeout": 500,
      "records": [
        {
          "type": "default",
          "reverseDNS": {
            "enabled": false
          }
        },
        {
          "type": "a",
          "enabled": true,
          "http": {
            "code": 301
          },
          "https": {
            "code": 200
          }
        },
        {
          "type": "aaaa",
          "enabled": true,
          "http": {
            "code": 301
          },
          "https": {
            "code": 200
          }
        },
        {
          "type": "cname",
          "enabled": true,
          "http": {
            "code": 301
          },
          "https": {
            "code": 200
          }
        },
        {
          "type": "mx",
          "enabled": true
        },
        {
          "type": "txt",
          "enabled": true
        }
      ]
    }
  ],
  "servers": [
    {
      "name": "api",
      "include": [
        "^api\\."
      ],
      "records": [
        {
          "type": "a|cname",
          "allowed": [1]
        },
        {
          "type": "a",
          "allowed": [0, 4]
        },
        {
          "type": "cname",
          "allowed": [0, 1]
        },
        {
          "type": "txt",
          "allowed": [0, 1, 2, 3]
        }
      ]
    },
    {
      "name": "domainkey",
      "include": [
        "\\._domainkey\\."
      ],
      "records": [
        {
          "type": "txt",
          "allowed": [1]
        }
      ]
    },
    {
      "name": "website",
      "default": true,
      "include": [
        "^www\\."
      ],
      "records": [
        {
          "type": "a|cname",
          "allowed": [1]
        },
        {
          "type": "a",
          "allowed": [0, 4]
        },
        {
          "type": "cname",
          "allowed": [0, 1]
        },
        {
          "type": "mx",
          "allowed": [0, 5]
        },
        {
          "type": "txt",
          "allowed": [0, 1, 2, 3]
        }
      ]
    }
  ]
}