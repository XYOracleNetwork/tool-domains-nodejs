{
  "$schema": "../schema/dnslint.schema.json#",
  "aws": {
    "enabled": true
  },
  "domains": [
    {
      "name": "default",
      "enabled": true,
      "timeout": 500,
      "records": [
        {
          "type": "default",
          "reverseDNS": {
            "enabled": false
          }
        },
        {
          "type": "A",
          "enabled": true,
          "http": {
            "code": 301
          },
          "https": {
            "code": 200
          }
        },
        {
          "type": "AAAA",
          "enabled": true,
          "http": {
            "code": 301
          },
          "https": {
            "code": 200
          }
        },
        {
          "type": "CNAME",
          "enabled": true,
          "http": {
            "code": 301
          },
          "https": {
            "code": 200
          }
        },
        {
          "type": "MX",
          "enabled": true
        },
        {
          "type": "TXT",
          "enabled": true
        }
      ]
    }
  ],
  "servers": [
    {
      "name": "api",
      "include": [
        "^api\\.",
        "^devapi\\."
      ],
      "records": [
        {
          "type": "A|CNAME",
          "allowed": [1]
        },
        {
          "type": "A",
          "allowed": [0, 4]
        },
        {
          "type": "CNAME",
          "allowed": [0, 1]
        },
        {
          "type": "TXT",
          "allowed": [0, 1, 2, 3]
        }
      ]
    },
    {
      "name": "domainkey",
      "include": [
        "._domainkey."
      ],
      "records": [
        {
          "type": "TXT",
          "allowed": [1],
          "expected": [
            {
              "required": true,
              "value": "^v=DKIM1; k=rsa; "
            }
          ]
        }
      ]
    },
    {
      "name": "dmarc",
      "include": [
        "._dmarc."
      ],
      "records": [
        {
          "type": "TXT",
          "allowed": [1],
          "expected": [
            {
              "required": true,
              "value": "v=DMARC1; "
            }
          ]
        }
      ]
    },
    {
      "name": "website",
      "default": true,
      "include": [
        "^www\\."
      ],
      "records": [
        {
          "type": "A|CNAME",
          "allowed": [1]
        },
        {
          "type": "A",
          "allowed": [0, 1]
        },
        {
          "type": "CNAME",
          "allowed": [0, 1]
        },
        {
          "type": "MX",
          "allowed": [0, 5]
        },
        {
          "type": "TXT",
          "expected": [

          ]
        }
      ]
    }
  ]
}