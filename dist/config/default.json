{
    "$schema": "../schema/dnslint.schema.json#",
    "aws": {
        "enabled": true
    },
    "domains": [
        {
            "name": "default",
            "enabled": true,
            "records": [
                {
                    "type": "default",
                    "timeout": 1000,
                    "reverseDNS": {
                        "enabled": false
                    }
                },
                {
                    "type": "A",
                    "enabled": true,
                    "reverseDNS": {
                        "enabled": true,
                        "value": ".r.cloudfront.net$"
                    },
                    "webcalls": [
                        {
                            "protocol": "http",
                            "statusCode": 301,
                            "callTimeMax": 200,
                            "headers": [
                                {
                                    "name": "location",
                                    "value": {
                                        "disposition": "required"
                                    }
                                }
                            ]
                        },
                        {
                            "protocol": "https",
                            "statusCode": 200,
                            "callTimeMax": 200,
                            "headers": [
                                {
                                    "name": "content-type",
                                    "value": {
                                        "disposition": "required"
                                    }
                                },
                                {
                                    "name": "content-security-policy",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "object-src 'none'"
                                    }
                                },
                                {
                                    "name": "x-content-type-options",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "nosniff"
                                    }
                                },
                                {
                                    "name": "x-frame-options",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "DENY"
                                    }
                                },
                                {
                                    "name": "x-xss-protection",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "1; mode=block"
                                    }
                                },
                                {
                                    "name": "referrer-policy",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "same-origin"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "AAAA",
                    "enabled": true,
                    "webcalls": [
                        {
                            "protocol": "http",
                            "statusCode": 301,
                            "headers": [
                                {
                                    "name": "location",
                                    "value": {
                                        "disposition": "required"
                                    }
                                }
                            ]
                        },
                        {
                            "protocol": "https",
                            "statusCode": 200,
                            "headers": [
                                {
                                    "name": "content-type",
                                    "value": {
                                        "disposition": "required"
                                    }
                                },
                                {
                                    "name": "content-security-policy",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "object-src 'none'"
                                    }
                                },
                                {
                                    "name": "x-content-type-options",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "nosniff"
                                    }
                                },
                                {
                                    "name": "x-frame-options",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "DENY"
                                    }
                                },
                                {
                                    "name": "x-xss-protection",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "1; mode=block"
                                    }
                                },
                                {
                                    "name": "referrer-policy",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "same-origin"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "CAA",
                    "enabled": true,
                    "values": [
                        {
                            "disposition": "required",
                            "filter": {
                                "flags": 0,
                                "tag": "^issue$",
                                "value": "^amazon.com$",
                                "issuerCritical": false
                            }
                        }
                    ]
                },
                {
                    "type": "CNAME",
                    "enabled": true,
                    "webcalls": [
                        {
                            "protocol": "http",
                            "statusCode": 301,
                            "headers": [
                                {
                                    "name": "location",
                                    "value": {
                                        "disposition": "required"
                                    }
                                }
                            ]
                        },
                        {
                            "protocol": "https",
                            "statusCode": 200,
                            "headers": [
                                {
                                    "name": "content-type",
                                    "value": {
                                        "disposition": "required"
                                    }
                                },
                                {
                                    "name": "content-security-policy",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "object-src 'none'"
                                    }
                                },
                                {
                                    "name": "x-content-type-options",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "nosniff"
                                    }
                                },
                                {
                                    "name": "x-frame-options",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "DENY"
                                    }
                                },
                                {
                                    "name": "x-xss-protection",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "1; mode=block"
                                    }
                                },
                                {
                                    "name": "referrer-policy",
                                    "value": {
                                        "disposition": "required",
                                        "filter": "same-origin"
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "MX",
                    "enabled": true
                },
                {
                    "type": "TXT",
                    "enabled": true
                }
            ]
        }
    ],
    "servers": [
        {
            "name": "api",
            "include": [
                "^api\\.",
                "^devapi\\."
            ],
            "records": [
                {
                    "type": "A|CNAME"
                },
                {
                    "type": "A"
                },
                {
                    "type": "CNAME"
                },
                {
                    "type": "TXT"
                }
            ]
        },
        {
            "name": "domainkey",
            "include": [
                "._domainkey."
            ],
            "records": [
                {
                    "type": "A",
                    "webcalls": [
                        {
                            "protocol": "http",
                            "enabled": false
                        },
                        {
                            "protocol": "https",
                            "enabled": false
                        }
                    ]
                },
                {
                    "type": "AAAA",
                    "webcalls": [
                        {
                            "protocol": "http",
                            "enabled": false
                        },
                        {
                            "protocol": "https",
                            "enabled": false
                        }
                    ]
                },
                {
                    "type": "CNAME",
                    "webcalls": [
                        {
                            "protocol": "http",
                            "enabled": false
                        },
                        {
                            "protocol": "https",
                            "enabled": false
                        }
                    ]
                },
                {
                    "type": "TXT",
                    "values": [
                        {
                            "disposition": "required",
                            "filter": "^v=DKIM1; k=rsa; "
                        }
                    ]
                }
            ]
        },
        {
            "name": "dmarc",
            "include": [
                "^_dmarc."
            ],
            "records": [
                {
                    "type": "TXT",
                    "values": [
                        {
                            "disposition": "required",
                            "filter": "^v=DMARC1; "
                        }
                    ]
                }
            ]
        },
        {
            "name": "website",
            "default": true,
            "include": [
                "^www\\."
            ],
            "records": [
                {
                    "type": "A|CNAME"
                },
                {
                    "type": "A"
                },
                {
                    "type": "CNAME"
                },
                {
                    "type": "MX",
                    "values": [{
                            "disposition": "required",
                            "filter": {
                                "preference": 5,
                                "exchange": "alt1.aspmx.l.google.com"
                            }
                        }
                    ]
                },
                {
                    "type": "TXT"
                }
            ]
        }
    ]
}
