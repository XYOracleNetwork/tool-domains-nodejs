{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "dnslint.schema.json",
    "additionalItems": false,
    "additionalProperties": false,
    "definitions": {
        "source": {
            "$id": "#definitions/source",
            "additionalProperties": false,
            "title": "Source",
            "type": "object",
            "properties": {
                "enabled": { "type": "boolean" }
            }
        },
        "value": {
            "$id": "#definitions/value",
            "additionalProperties": false,
            "title": "Record",
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "disposition": { "type": "string", "enum": ["required", "optional", "disallowed"] },
                "filter": { "type": ["string", "object"] }
            }
        },
        "record": {
            "$id": "#definitions/record",
            "additionalProperties": false,
            "title": "Record",
            "type": "object",
            "properties": {
                "type": { "type": "string" },
                "enabled": { "type": "boolean" },
                "timeout": { "type": "number" },
                "html": { "type": "boolean" },
                "values": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/value" }
                },
                "addresses": {
                    "type": "object",
                    "properties": {
                        "enabled": { "type": "boolean" },
                        "minimum": { "type": "number" }
                    }
                },
                "webcalls": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/webcall" }
                },
                "reverseDNS": {
                    "type": "object",
                    "properties": {
                        "enabled": { "type": "boolean" }
                    }
                }
            }
        },
        "header": {
            "$id": "#definitions/header",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": { "type": "string" },
                "value": { "$ref": "#/definitions/value" }
            }
        },
        "webcall": {
            "$id": "#definitions/webcall",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "enabled": { "type": "boolean" },
                "statusCode": { "type": "number" },
                "httpVersion": { "type": "string" },
                "callTimeMax": { "type": "number" },
                "protocol": { "type": "string" },
                "port": { "type": "number" },
                "headers": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/header" }
                }
            }
        },
        "domain": {
            "$id": "#definitions/domain",
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "enabled": { "type": "boolean" },
                "crawl": { "type": "boolean" },
                "reverseDNS": {
                    "enabled": "boolean"
                },
                "type": { "type": "string" },
                "records": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/record"
                    }
                }
            }
        },
        "server": {
            "$id": "#definitions/server",
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "default": { "type": "boolean" },
                "crawl": { "type": "boolean" },
                "include": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "records": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/record"
                    }
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "$schema": { "type": "string" },
        "additionalProperties": false,
        "aws": { "$ref": "#/definitions/source" },
        "domains": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/domain"
            }
        },
        "servers": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/server"
            }
        }
    }
}
